[flake8]
# Maximum line length
max-line-length = 120

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg-info

# Ignore specific rules
ignore = E203, W503, W504

# Count errors
count = True

# Show errors with statistics
statistics = True
